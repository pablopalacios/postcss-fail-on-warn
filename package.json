{
  "name": "postcss-fail-on-warn",
  "version": "0.2.0",
  "description": "PostCSS plugin throws a error on any warning from previous PostCSS plugins",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "warning"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-fail-on-warn",
  "engines": {
    "node": ">=12.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.1",
    "clean-publish": "^2.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "jest": "^26.4.2",
    "lint-staged": "^11.0.0",
    "postcss": "^8.2.14",
    "postcss-sharec-config": "^0.4.1",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "no-console": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.4.1"
  }
}
